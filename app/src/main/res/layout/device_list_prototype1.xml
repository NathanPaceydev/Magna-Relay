<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_setup">

    <TextView
        android:id="@+id/gettingStartedView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/menu_eng"
        android:textColor="@color/white"
        tools:ignore="RelativeOverlap" />

    <Button
        android:id="@+id/deviceSetupButton"
        android:layout_width="170dp"
        android:layout_height="19.845714286dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="43.428571429dp"
        android:background="@drawable/device_setup_button"
        android:textColor="@color/white"
        android:text="@string/setup_eng"
        android:textSize="12sp"
        tools:ignore="SmallSp" />

    <Button
        android:id="@+id/hoodButton"
        android:layout_width="53.2457142857dp"
        android:layout_height="53.2457142857dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="61.1428571429dp"
        android:layout_marginEnd="13.7142857143dp"
        android:background="@drawable/hood_button" />

    <TextView
        android:id="@+id/hoodText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hoodButton"
        android:layout_alignStart="@+id/hoodButton"
        android:layout_alignEnd="@+id/hoodButton"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:text="@string/hood_eng"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="11sp"
        tools:ignore="SmallSp" />

    <Button
        android:id="@+id/doorsButton"
        android:layout_width="53.2457142857dp"
        android:layout_height="53.2457142857dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61.1428571429dp"
        android:background="@drawable/doors_button" />

    <TextView
        android:id="@+id/doorsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doorsButton"
        android:layout_alignStart="@+id/doorsButton"
        android:layout_alignEnd="@+id/doorsButton"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:text="@string/doors_eng"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="11sp"
        tools:ignore="SmallSp" />

    <Button
        android:id="@+id/liftGateButton"
        android:layout_width="53.2457142857dp"
        android:layout_height="53.2457142857dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13.7142857143dp"
        android:layout_marginTop="61.1428571429dp"
        android:background="@drawable/liftgate_button" />

    <TextView
        android:id="@+id/liftGateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/liftGateButton"
        android:textAlignment="center"
        android:layout_alignStart="@+id/liftGateButton"
        android:layout_alignEnd="@+id/liftGateButton"
        android:layout_centerVertical="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:text="@string/liftgate_eng"
        android:textColor="@color/white"
        android:textSize="11sp"
        tools:ignore="SmallSp" />
</RelativeLayout>